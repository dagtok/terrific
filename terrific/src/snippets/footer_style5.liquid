<footer class="style-5">
    <div class="row">
      <div class="col-12 text-center">
        <i class="fa fa-angle-up" aria-hidden="true"></i>
        <br>
        BACK TO TOP
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <nav class="menu">
          <ul class="d-md-flex flex-wrap">
            <li class="float-md-left"><a href="#">ONLINE STORE</a></li>
            {%- assign footer_linklist = section.settings.footer_linklist -%}
            {% if linklists[footer_linklist].links.size > 0 %}
              {% for link in linklists[footer_linklist].links %}
                <li class="float-md-left"><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            {% endif %}
          </ul>
        </nav>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <h3 class="text-center">Follow us on</h3>
        <nav class="social-networks">
          {%- assign social_accounts = 'Facebook, Twitter, Pinterest, Instagram, Snapchat, Tumblr, YouTube, Vimeo,' | split: ', ' -%}
          <ul class="follow-us-on d-md-flex flex-wrap">
            {% for social in social_accounts %}
              {%- assign social_handle = social | handleize -%}
              {% capture social_link %}social_{{ social_handle }}_link{% endcapture %}
              {% capture social_icon %}fa-{{ social_handle }}{% endcapture %}

              {% if settings[social_link] != blank %}
                <li>
                  <a href="{{ settings[social_link] }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: social }}">
                    <i class="fa {{ social_icon }}" aria-hidden="true"></i>
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </ul>
      </div>
    </div>

    <div class="row brand">
      <div class="col-md-5 text-center text-md-left">
        {{ 'layout.footer.copyright' | t }} &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: '/' }}
      </div>
      <div class="col-md-7 text-center text-md-right copyrights">
        {{ powered_by_link }}
      </div>
    </div>
  </footer>