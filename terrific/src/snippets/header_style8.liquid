<header class="container-fluid style-8">
  <div class="row">
    <div class="col-12 text-center offer">
      <span>
        FREE UK DELIVERY ON ALL ORDERS OVER Â£150 | FREE UK RETURNS
      </span>
    </div>
    <div class="col-12">
      <div class="row">
        <div class="col-12">
          <div class="d-flex">
            <div class="justify-content-start">
              United Kingdom
            </div>
            <div class="ml-auto mr-auto logo">
              {{ shop.name | escape }}
