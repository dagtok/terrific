  <footer class="container-fluid style-11">
    <div class="row">
      <div class="col-12 text-center newsletter">
        <h1>JOIN OUR SECRET SOCIETY</h1>
        <p>
          Live our truth (i.e. parties, funny stuff, new stuff + sales)
        </p>
        <div class="newsletter-form">
          <input type="email" name="EmailAddress" value="" size="40" placeholder="Email Address">
        <input type="submit" value="Submit" class="with-arrow" >
        </div>
      </div>

      <div class="col-12 d-flex justify-content-center">
        <ul class="menu nav">
          <li><a href="#">ABOUT</a></li>
          {%- assign footer_linklist = section.settings.footer_linklist -%}
          {% if linklists[footer_linklist].links.size > 0 %}
            {% for link in linklists[footer_linklist].links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          {% endif %}
        </ul>
      </div>
      <div class="col-12 d-flex justify-content-center">
        <ul class="social-networks nav">
          {%- assign social_accounts = 'Facebook, Twitter, Pinterest, Instagram, Snapchat, Tumblr, YouTube, Vimeo,' | split: ', ' -%}
          {% for social in social_accounts %}
            {%- assign social_handle = social | handleize -%}
            {% capture social_link %}social_{{ social_handle }}_link{% endcapture %}
            {% capture social_icon %}fa-{{ social_handle }}{% endcapture %}

            {% if settings[social_link] != blank %}
              <li>
                <a href="{{ settings[social_link] }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: social }}">
                  <i class="fa {{ social_icon }}" aria-hidden="true"></i>
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      <div class="col-12 d-flex justify-content-center">
        {{ 'layout.footer.copyright' | t }} &copy; {{ 'now' | date: "%Y" }} {{ shop.name | link_to: '/' }} 
         | 
        <a href="#" >Terms & Conditions</a>
      </div>
    </div>
  </footer>