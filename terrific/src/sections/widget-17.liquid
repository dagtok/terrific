{% if section.settings.banner_image_1 != blank %}
  {% assign img_url_1 = section.settings.banner_image_1 | img_url: '2048x2048' %}
{% comment %}{% else %}
  {% assign img_url = 'layout9_image1.jpg' | asset_url %}{% endcomment %}
{% endif %}
{% if section.settings.banner_image_2 != blank %}
  {% assign img_url_2 = section.settings.banner_image_2 | img_url: '2048x2048' %}
{% comment %}{% else %}
  {% assign img_url = 'layout9_image1.jpg' | asset_url %}{% endcomment %}
{% endif %}
{% if section.settings.banner_image_3 != blank %}
