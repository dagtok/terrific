{% endif %}

<div class="container">
  <div class="row widget style-17">
    <div class="col-12 text-center">
      <h1 class="section-title">
        {{ section.settings.title }}
      </h1>
    </div>
    <article class="col-6 ml-auto mr-auto col-md-4">
      <figure class="featured">
        <img class="img-fluid" src="{{ img_url_1 }}">
        <div class="overlay-wrapper color-white">
          <div class="overlay">
            <h3 class="title">
              <a href="#">{{ section.settings.banner_title_1 }}</a>
            </h3>
          </div>
        </div>
      </figure>
    </article>
    <article class="col-6 ml-auto mr-auto col-md-4">
      <figure class="featured">
        <img class="img-fluid" src="{{ img_url_2 }}">
        <div class="overlay-wrapper color-white">
          <div class="overlay">
            <h3 class="title">
              <a href="#">{{ section.settings.banner_title_2 }}</a>
            </h3>
          </div>
        </div>
      </figure>
    </article>
    <article class="col-6 ml-auto mr-auto col-md-4">
      <figure class="featured">
        <img class="img-fluid" src="{{ img_url_3 }}">
        <div class="overlay-wrapper color-white">
          <div class="overlay">
            <h3 class="title">
              <a href="#">{{ section.settings.banner_title_3 }}</a>
            </h3>
          </div>
        </div>
      </figure>
    </article>
  </div>
</div>
